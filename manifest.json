{
    "name"    : "Leo Dictionary Widget",
    "manifest_version" : 2,
    "description" : "Select a word on a website and immediately look up its translation. No tabs, no windows. Guranteed!",
    "icons" : {
        "48" : "leo48.png",
        "128" : "leo128.png"
    },
    "version"  : "2.0.3",
    "content_scripts" : [
        {
            "matches" : ["*://*/*"],
            "js" : ["leodictwidget.js"]
        }
    ],
    "options_page" : "fancy-settings/source/index.html",
    "background" : {
                        "page" : "background.html",
                        "persistent" : false
                   }
}
